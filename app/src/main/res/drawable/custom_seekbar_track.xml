<?xml version="1.0" encoding="utf-8"?><!-- res/drawable/custom_seekbar_track.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Inactive track -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="@android:color/darker_gray" /> <!-- Set inactive color -->
        </shape>
    </item>

    <!-- Active track -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="10dp" />
                <solid android:color="?attr/colorPrimary" /> <!-- Set active color -->
            </shape>
        </clip>
    </item>
</layer-list>
